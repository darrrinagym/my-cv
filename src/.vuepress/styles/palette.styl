$accentColor = #2E26D9
$textColor = #2B2434
$borderColor =#D5D3D6
$codeBgColor = #17112F
$arrowBgColor = #D5D3D6
$badgeTipColor = darken(#5CFF26, 15%)
$badgeWarningColor = lighten(#2E26D9, 15%)
$badgeErrorColor = #B50AD0

.blockquote 
    font-size: 1.2rem
    color: #2E26D9;;
    border-left: 0.2rem solid #2E26D9
    margin: 1rem 0;
    padding: 0.25rem 0 0.25rem 1rem;

.custom-block
  .custom-block-title
    font-weight 600
    margin-bottom -0.4rem
  &.tip, &.warning, &.danger
    padding .1rem 1.5rem
    border-left-width .2rem
    border-left-style solid
    margin 1rem 0
  &.tip
    background-color lighten(#EAEAEB, 60%)
    border-color #2E26D9
  &.warning
    background-color lighten(#2E26D9, 90%)
    border-color darken(#2E26D9, 5%)
    color darken(#2E26D9, 40%)
    .custom-block-title
      color darken(#2E26D9, 10%)
    a
      color $textColor
  &.danger
    background-color lighten(#B50AD0, 90%)
    border-color darken(#B50AD0, 0%)
    color darken(#B50AD0, 40%)
    .custom-block-title
      color darken(#B50AD0, 10%)
    a
      color $textColor
